<Window x:Class="Habraken_SLE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Habraken_SLE"
        xmlns:myControls="clr-namespace:Habraken_SLE.Overlays"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" WindowStyle="None" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="900*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" x:Name="gridHeader" Background="#FF323764" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Grid x:Name="gridLogin" Grid.Column="2">
                    <Label x:Name="lblUserName" Content="username" Margin="0,12,105,36" FontSize="16" HorizontalContentAlignment="Right" HorizontalAlignment="Right" Width="282" Foreground="White"/>
                    <Label x:Name="lblUserProfile" Content="userProfile" Margin="0,43,105,6" FontStyle="Italic" FontSize="16" HorizontalContentAlignment="Right" HorizontalAlignment="Right" Width="282" Foreground="White"/>

                    <Button x:Name="btnLogin" Margin="297,10,10,10" FontSize="20" Click="btnLogin_Click" Background="Transparent" >
                        <StackPanel>
                            <Image x:Name="imgLogin" Source="/Images/Login.png" Stretch="Fill"/>
                        </StackPanel>
                    </Button>
                    <PasswordBox x:Name="pb_Login" Margin="42,10,105,10" FontSize="40" PasswordChar="*" />
                </Grid>
            </Grid>
        </Grid>

        <Grid x:Name="gridMain" Grid.Row="1">
            <myControls:Home x:Name="home"  Visibility="Visible" />
            <myControls:Logo x:Name="logo" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" Height="534" Width="1092"  />
        </Grid>

        <Grid Grid.Row="2" Background="#FF323764">
            <Button x:Name="btnExit" Margin="0,0,1882,0" Background="Transparent" Click="btnExit_Click">
                <StackPanel>
                    <Image x:Name="imgExit" Source="/Images/exit.png" Stretch="Fill"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
